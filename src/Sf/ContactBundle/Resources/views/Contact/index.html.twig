{% extends 'SfContactBundle::layout.html.twig' %}

{% block body -%}
<h3>Liste des contacts</h3>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Catégorie</th>
            <th>Email</th>
            <th>Adresse</th>
            <th>Téléphone (fixe)</th>
            <th>Téléphone (mobile)</th>
            <th>Téléphone (autre)</th>
            <th>Remarques</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>

            <td>{{ entity.name }}</td>
            <td>{{ entity.category }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.homePhoneNumber }}</td>
            <td>{{ entity.mobilePhoneNumber }}</td>
            <td>{{ entity.otherPhoneNumber }}</td>
            <td>{{ entity.remark|nl2br }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('contact_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contact_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}