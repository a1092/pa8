{% extends 'SfShoppingBundle::layout.html.twig' %}

{% block body %}
    <h1>Supprimer une liste de courses</h1>
    <p>
    Etes-vous certain de vouloir supprimer la liste de courses "{{ entity.name }}" ?
  </p>

            <a href="{{ path('shoppinglist') }}">
                Back to the shoppinglists
            </a>

    <form action="{{ path('shoppinglist_delete', {'id': entity.id}) }}" method="post">
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}