{% extends '::layout.html.twig' %}



{% block bodytitle %}
Tâches
{% endblock %}

{% block head %}
{% endblock %}


{% block javascript %}
{% endblock %}

{% block bodyaction %}
	<button class="btn btn-default" onclick="document.location='{{ path('task_new', { 'visible': '1' }) }}'">Nouvelle tâche</button>
{% endblock %}


{% block body -%}
   
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Deadline</th>
                <th>Persons concerned</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{% if entity.deadline %}{{ entity.deadline|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% for user in entity.getUsers() %}
                    {{ user.firstname }}
                <br />
                {% endfor %}</td>
                <td>{{ entity.description|nl2br }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('task_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('task_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
